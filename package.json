{
  "name": "youtube-downloader",
  "version": "1.2.2",
  "description": "YouTube Downloader - Download as high-quality M4A or MP4",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac"
  },
  "keywords": [
    "youtube",
    "music",
    "downloader",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "fluent-ffmpeg": "^2.1.3",
    "yt-dlp-wrap": "^2.3.12"
  },
  "build": {
    "appId": "com.youtube-downloader",
    "productName": "YouTube Downloader",
    "mac": {
      "category": "public.app-category.music",
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "directories": {
      "output": "dist"
    }
  }
}
